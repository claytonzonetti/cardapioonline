{% extends "layoutCardapio.njk" %}
{% import "parts/section-products.njk" as section %}

{% block content %}
<section class="search-products container">

    <aside>                                     <!-- menu lateral responsavel pelos grupos de produtos -->
        <div class="header">
            <h2>{{search.term}}</h2>
            <p>{{search.total}} encontrados</p>
        </div>

        <nav class="categories">
            <h2>Categorias</h2>
            <ul>
                {%for category in categories %}
                <li><a href="/products/search?filter={{category.name}}&category={{category.id}}">{{category.name}}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </aside>

 {{section.products('', 'searched', products)}}  <!-- responsavel pelos produtos section-products.njk -->
   
</section>
{% endblock content %}